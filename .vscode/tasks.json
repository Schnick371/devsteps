{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ—ï¸ Build All",
      "type": "shell",
      "command": "npm run build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "ğŸ“¦ Package: All Distribution Files",
      "type": "shell",
      "command": "npm run package:all",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ“¦ Build and Package Extension",
      "type": "shell",
      "command": "npm run build && cd packages/extension && npm run package",
      "group": "build",
      "problemMatcher": [
        "$tsc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOrder": "sequence"
    },
    {
      "label": "ğŸ‘€ Watch All",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting compilation",
          "endsPattern": "(Compilation complete|Found \\d+ errors)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "âœ… Test: All",
      "dependsOrder": "sequence",
      "dependsOn": ["ğŸ” Test: Lint", "ğŸ§ª Test: Unit", "ğŸ¦‡ Test: CLI Integration"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "ğŸ” Test: Lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "group": "test",
      "problemMatcher": {
        "owner": "biome",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      }
    },
    {
      "label": "ğŸ§ª Test: Unit",
      "type": "shell",
      "command": "npm",
      "args": ["test"],
      "group": "test",
      "problemMatcher": {
        "owner": "vitest",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^\\s*at\\s+.*\\s+\\((.*):(\\d+):(\\d+)\\)$",
          "file": 1,
          "line": 2,
          "column": 3
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      }
    },
    {
      "label": "ğŸ¦‡ Test: CLI Integration (BATS)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:cli"],
      "group": "test",
      "problemMatcher": {
        "owner": "bats",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^\\s*not ok\\s+\\d+\\s+(.*)$",
          "message": 1
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      }
    },
    {
      "label": "ğŸ”„ Test: Watch",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:watch"],
      "isBackground": true,
      "group": "test",
      "problemMatcher": {
        "owner": "vitest",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^WAIT.*",
          "endsPattern": "^.*watching for file changes"
        },
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      }
    },
    {
      "label": "ğŸ” Lint",
      "type": "shell",
      "command": "npm run lint",
      "problemMatcher": {
        "owner": "biome",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "âœ¨ Format",
      "type": "shell",
      "command": "npm run format",
      "problemMatcher": []
    },
    {
      "label": "ğŸ§¹ Clean",
      "type": "shell",
      "command": "npm run clean",
      "problemMatcher": []
    },
    {
      "label": "ğŸš€ CLI: Init Project",
      "type": "shell",
      "command": "node packages/cli/dist/index.js init test-project",
      "dependsOn": [
        "Build All"
      ],
      "problemMatcher": []
    },
    {
      "label": "ğŸ“Š CLI: Status",
      "type": "shell",
      "command": "node packages/cli/dist/index.js status",
      "dependsOn": [
        "Build All"
      ],
      "problemMatcher": []
    },
    {
      "label": "ğŸ–¥ï¸ MCP: Start Server",
      "type": "shell",
      "command": "node packages/mcp-server/dist/index.js",
      "dependsOn": [
        "Build All"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "DevSteps MCP Server running"
        }
      }
    },
    {
      "label": "ğŸ“¥ Install Dependencies",
      "type": "shell",
      "command": "npm install",
      "problemMatcher": []
    },
    {
      "label": "ğŸ” Type Check",
      "type": "shell",
      "command": "npm run typecheck",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "ğŸ“– DevSteps: List Open Stories",
      "type": "shell",
      "command": "node packages/cli/dist/index.js list --type story --status draft",
      "dependsOn": [
        "Build All"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "âš¡ DevSteps: List High Priority Items",
      "type": "shell",
      "command": "node packages/cli/dist/index.js list --priority high",
      "dependsOn": [
        "Build All"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "ğŸ”¥ DevSteps: List Q1 Tasks (Urgent & Important)",
      "type": "shell",
      "command": "node packages/cli/dist/index.js list --eisenhower urgent-important --status draft",
      "dependsOn": [
        "Build All"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "ğŸ“ˆ DevSteps: Full Status Report",
      "type": "shell",
      "command": "node packages/cli/dist/index.js status",
      "dependsOn": [
        "Build All"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "ğŸ› Build Extension (Debug)",
      "type": "shell",
      "command": "node esbuild.js",
      "options": {
        "cwd": "${workspaceFolder}/packages/extension"
      },
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    }
  ]
}