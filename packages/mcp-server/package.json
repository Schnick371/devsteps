{
  "name": "@schnick371/devcrumbs-mcp-server",
  "version": "0.4.1",
  "type": "module",
  "description": "Never Code Alone. MCP server for AI-assisted developer task tracking - team up with your AI.",
  "author": "devcrumbs.com",
  "license": "Apache-2.0",
  "homepage": "https://devcrumbs.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Schnick371/devcrumbs.git"
  },
  "bugs": {
    "url": "https://github.com/Schnick371/devcrumbs/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "ai",
    "ai-assisted-development",
    "task-tracking",
    "task-management",
    "workflow",
    "devops",
    "project-management",
    "agile",
    "development-tools"
  ],
  "main": "./dist/index.js",
  "bin": {
    "devcrumbs-mcp": "bin/devcrumbs-mcp-tsx.js",
    "devcrumbs-mcp-tsx": "bin/devcrumbs-mcp-tsx.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc && node esbuild.cjs --production",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start": "node dist/index.js",
    "start:debug": "LOG_LEVEL=debug node dist/index.js",
    "start:trace": "LOG_LEVEL=trace node dist/index.js",
    "bundle": "node esbuild.cjs --production"
  },
  "exports": {
    ".": "./dist/index.js",
    "./http-server": "./dist/http-server.js",
    "./dist/http-server.js": "./dist/http-server.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@devcrumbs/shared": "file:../shared",
    "@modelcontextprotocol/sdk": "latest",
    "@schnick371/devcrumbs-mcp-server": "^0.4.0",
    "commander": "^14.0.2",
    "express": "^4.19.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "simple-git": "^3.30.0",
    "zod": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.5",
    "@types/node": "latest",
    "esbuild": "^0.24.2",
    "typescript": "latest"
  }
}
