{
  "name": "@schnick371/devsteps-mcp-server",
  "version": "1.1.0-next.1",
  "type": "module",
  "description": "Never Code Alone. MCP server for AI-assisted developer task tracking - team up with your AI.",
  "author": "devsteps.dev",
  "license": "Apache-2.0",
  "homepage": "https://devsteps.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Schnick371/devsteps.git"
  },
  "bugs": {
    "url": "https://github.com/Schnick371/devsteps/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "ai",
    "ai-assisted-development",
    "task-tracking",
    "task-management",
    "workflow",
    "devops",
    "project-management",
    "agile",
    "development-tools"
  ],
  "main": "./dist/index.js",
  "bin": {
    "devsteps-mcp-server": "bin/devsteps-mcp.js",
    "devsteps-mcp": "bin/devsteps-mcp.js",
    "devsteps-mcp-tsx": "bin/devsteps-mcp-tsx.js"
  },
  "files": [
    "dist",
    "bin",
    ".github",
    ".devsteps"
  ],
  "scripts": {
    "build": "tsc --build && node esbuild.cjs --production && npm run copy:docs && npm run copy:copilot",
    "copy:docs": "mkdir -p .devsteps && (cp ../../.devsteps/HIERARCHY-COMPACT.md .devsteps/HIERARCHY-COMPACT.md 2>/dev/null || true) && (cp ../../.devsteps/AI-GUIDE-COMPACT.md .devsteps/AI-GUIDE-COMPACT.md 2>/dev/null || true)",
    "copy:copilot": "rm -rf .github && mkdir -p .github/prompts .github/instructions .github/agents && (cp ../../.github/prompts/devsteps-*.prompt.md .github/prompts/ 2>/dev/null || echo 'Warning: .github prompts not found') && (cp ../../.github/instructions/devsteps*.instructions.md .github/instructions/ 2>/dev/null || echo 'Warning: .github instructions not found') && (cp ../../.github/agents/devsteps*.agent.md .github/agents/ 2>/dev/null || echo 'Warning: .github agents not found')",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .devsteps .github *.tsbuildinfo",
    "prepublishOnly": "node ../../scripts/replace-workspace-deps.cjs",
    "postpublish": "git checkout package.json",
    "start": "node dist/index.js",
    "start:debug": "LOG_LEVEL=debug node dist/index.js",
    "start:trace": "LOG_LEVEL=trace node dist/index.js",
    "bundle": "node esbuild.cjs --production"
  },
  "exports": {
    ".": "./dist/index.js",
    "./http-server": "./dist/http-server.js",
    "./dist/http-server.js": "./dist/http-server.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@schnick371/devsteps-shared": "workspace:*",
    "@modelcontextprotocol/sdk": "latest",
    "commander": "^14.0.2",
    "express": "^5.1.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "simple-git": "^3.30.0",
    "zod": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.5",
    "@types/node": "latest",
    "esbuild": "^0.27.0",
    "typescript": "latest"
  }
}
