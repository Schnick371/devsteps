{
  "name": "@schnick371/devsteps-shared",
  "version": "0.6.0",
  "license": "Apache-2.0",
  "description": "Never Code Alone. Shared types, schemas, and utilities for DevSteps task tracking.",
  "author": "Thomas Hertel <thomas.hantke@devsteps.dev>",
  "homepage": "https://devsteps.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Schnick371/devsteps.git",
    "directory": "packages/shared"
  },
  "bugs": {
    "url": "https://github.com/Schnick371/devsteps/issues"
  },
  "keywords": [
    "devsteps",
    "task-tracking",
    "project-management",
    "agile",
    "scrum",
    "waterfall"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zod": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "latest"
  }
}
