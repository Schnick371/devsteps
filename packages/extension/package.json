{
  "name": "devsteps",
  "displayName": "DevSteps",
  "description": "Never Code Alone. Team Up With Your AI.",
  "version": "0.4.5",
  "publisher": "devsteps",
  "license": "Apache-2.0",
  "author": "Thomas Hertel (the@devsteps.dev)",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "task management",
    "project tracking",
    "ai integration",
    "development workflow",
    "requirements traceability"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "devsteps-mcp",
        "label": "DevSteps MCP Server"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devsteps-explorer",
          "title": "DevSteps",
          "icon": "resources/icons/devsteps-icon.svg"
        }
      ]
    },
    "submenus": [
      {
        "id": "devsteps.viewAndSort",
        "label": "View & Sort",
        "icon": "$(ellipsis)"
      }
    ],
    "views": {
      "devsteps-explorer": [
        {
          "id": "devsteps.itemsView",
          "name": "Work Items",
          "contextualTitle": "DevSteps Work Items"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "devsteps.itemsView",
        "contents": "No DevSteps project found in this workspace.\n\n[Initialize DevSteps Project](command:devsteps.initProject)\n\nOr use the Command Palette:\n• Run 'DevSteps: Initialize Project'\n• Use the CLI: `devsteps init`\n\nDevSteps helps you track work items, features, bugs, and requirements directly in your repository.\n\n[Learn More](https://github.com/Schnick371/devsteps)",
        "when": "!devsteps.initialized"
      }
    ],
    "commands": [
      {
        "command": "devsteps.initProject",
        "title": "Initialize Project",
        "category": "DevSteps",
        "icon": "$(rocket)"
      },
      {
        "command": "devsteps.refreshItems",
        "title": "Refresh Work Items",
        "category": "DevSteps",
        "icon": "$(refresh)"
      },
      {
        "command": "devsteps.viewMode.flat",
        "title": "Switch to Flat View",
        "category": "DevSteps",
        "icon": "$(list-flat)",
        "toggled": "devsteps.viewMode == 'flat'"
      },
      {
        "command": "devsteps.viewMode.hierarchical",
        "title": "Switch to Hierarchical View",
        "category": "DevSteps",
        "icon": "$(list-tree)",
        "toggled": "devsteps.viewMode == 'hierarchical'"
      },
      {
        "command": "devsteps.hierarchy.scrum",
        "title": "Show Scrum Hierarchy Only",
        "category": "DevSteps",
        "toggled": "devsteps.hierarchy == 'scrum'"
      },
      {
        "command": "devsteps.hierarchy.waterfall",
        "title": "Show Waterfall Hierarchy Only",
        "category": "DevSteps",
        "toggled": "devsteps.hierarchy == 'waterfall'"
      },
      {
        "command": "devsteps.hierarchy.both",
        "title": "Show Both Hierarchies",
        "category": "DevSteps",
        "toggled": "devsteps.hierarchy == 'both'"
      },
      {
        "command": "devsteps.addItem",
        "title": "Add Work Item",
        "category": "DevSteps",
        "icon": "$(add)"
      },
      {
        "command": "devsteps.openItem",
        "title": "Open Work Item",
        "category": "DevSteps"
      },
      {
        "command": "devsteps.updateStatus",
        "title": "Update Status",
        "category": "DevSteps",
        "icon": "$(edit)"
      },
      {
        "command": "devsteps.searchItems",
        "title": "Search Work Items",
        "category": "DevSteps",
        "icon": "$(search)"
      },
      {
        "command": "devsteps.showStatus",
        "title": "Show Project Status",
        "category": "DevSteps",
        "icon": "$(graph)"
      },
      {
        "command": "devsteps.showDashboard",
        "title": "Show Dashboard",
        "category": "DevSteps",
        "icon": "$(dashboard)"
      },
      {
        "command": "devsteps.copyId",
        "title": "Copy Item ID",
        "category": "DevSteps",
        "icon": "$(copy)"
      },
      {
        "command": "devsteps.revealInExplorer",
        "title": "Reveal in Explorer",
        "category": "DevSteps",
        "icon": "$(file-directory)"
      },
      {
        "command": "devsteps.editProperties",
        "title": "Edit Properties",
        "category": "DevSteps",
        "icon": "$(settings-gear)"
      },
      {
        "command": "devsteps.filterByStatus",
        "title": "Filter by Status",
        "category": "DevSteps",
        "icon": "$(filter)"
      },
      {
        "command": "devsteps.filterByPriority",
        "title": "Filter by Priority",
        "category": "DevSteps",
        "icon": "$(filter)"
      },
      {
        "command": "devsteps.filterByType",
        "title": "Filter by Type",
        "category": "DevSteps",
        "icon": "$(filter)"
      },
      {
        "command": "devsteps.clearFilters",
        "title": "Clear All Filters",
        "category": "DevSteps",
        "icon": "$(clear-all)"
      },
      {
        "command": "devsteps.sort",
        "title": "Sort Items",
        "category": "DevSteps",
        "icon": "$(arrow-both)"
      },
      {
        "command": "devsteps.mcp.showStatus",
        "title": "Show MCP Server Status",
        "category": "DevSteps"
      },
      {
        "command": "devsteps.showOutput",
        "title": "Show Output Channel",
        "category": "DevSteps",
        "icon": "$(output)"
      },
      {
        "command": "devsteps.clearOutput",
        "title": "Clear Output Channel",
        "category": "DevSteps",
        "icon": "$(clear-all)"
      },
      {
        "command": "devsteps.toggleHideDone",
        "title": "Hide Completed Items",
        "category": "DevSteps",
        "icon": "$(eye)",
        "toggled": "devsteps.hideDone"
      }
    ],
    "keybindings": [
      {
        "command": "devsteps.refreshItems",
        "key": "f5",
        "when": "focusedView == devsteps.itemsView"
      },
      {
        "command": "devsteps.openItem",
        "key": "enter",
        "when": "focusedView == devsteps.itemsView && viewItem == workItem"
      },
      {
        "command": "devsteps.searchItems",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "focusedView == devsteps.itemsView"
      },
      {
        "command": "devsteps.clearFilters",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "focusedView == devsteps.itemsView"
      },
      {
        "command": "devsteps.filterByStatus",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "focusedView == devsteps.itemsView"
      },
      {
        "command": "devsteps.filterByPriority",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "focusedView == devsteps.itemsView"
      },
      {
        "command": "devsteps.viewMode.hierarchical",
        "key": "ctrl+shift+v h",
        "mac": "cmd+shift+v h",
        "when": "focusedView == devsteps.itemsView"
      },
      {
        "command": "devsteps.viewMode.flat",
        "key": "ctrl+shift+v f",
        "mac": "cmd+shift+v f",
        "when": "focusedView == devsteps.itemsView"
      },
      {
        "command": "devsteps.showDashboard",
        "key": "ctrl+shift+d d",
        "mac": "cmd+shift+d d",
        "when": "workspaceFolderCount > 0 && devsteps.initialized"
      },
      {
        "command": "devsteps.addItem",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "focusedView == devsteps.itemsView"
      },
      {
        "command": "devsteps.updateStatus",
        "key": "ctrl+u",
        "mac": "cmd+u",
        "when": "focusedView == devsteps.itemsView && viewItem == workItem"
      },
      {
        "command": "devsteps.editProperties",
        "key": "ctrl+e",
        "mac": "cmd+e",
        "when": "focusedView == devsteps.itemsView && viewItem == workItem"
      }
    ],
    "configuration": {
      "title": "DevSteps",
      "properties": {
        "devsteps.logging.level": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Logging level for DevSteps output channel",
          "enumDescriptions": [
            "Only errors",
            "Errors and warnings",
            "Errors, warnings, and info messages",
            "All messages including debug"
          ]
        },
        "devsteps.logging.showOutputOnError": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show output channel when errors occur"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "devsteps.toggleHideDone",
          "when": "view == devsteps.itemsView && devsteps.initialized",
          "group": "navigation@1"
        },
        {
          "command": "devsteps.refreshItems",
          "when": "view == devsteps.itemsView && devsteps.initialized",
          "group": "navigation@2"
        },
        {
          "command": "devsteps.addItem",
          "when": "view == devsteps.itemsView && devsteps.initialized",
          "group": "navigation@3"
        },
        {
          "command": "devsteps.searchItems",
          "when": "view == devsteps.itemsView && devsteps.initialized",
          "group": "navigation@4"
        },
        {
          "command": "devsteps.showDashboard",
          "when": "view == devsteps.itemsView && devsteps.initialized",
          "group": "navigation@5"
        },
        {
          "submenu": "devsteps.viewAndSort",
          "when": "view == devsteps.itemsView && devsteps.initialized",
          "group": "1_viewsort"
        }
      ],
      "devsteps.viewAndSort": [
        {
          "command": "devsteps.viewMode.flat",
          "group": "1_view@1"
        },
        {
          "command": "devsteps.viewMode.hierarchical",
          "group": "1_view@2"
        },
        {
          "command": "devsteps.hierarchy.scrum",
          "group": "2_hierarchy@1"
        },
        {
          "command": "devsteps.hierarchy.waterfall",
          "group": "2_hierarchy@2"
        },
        {
          "command": "devsteps.hierarchy.both",
          "group": "2_hierarchy@3"
        },
        {
          "command": "devsteps.sort",
          "group": "3_sort@1"
        },
        {
          "command": "devsteps.filterByStatus",
          "group": "4_filter@1"
        },
        {
          "command": "devsteps.filterByPriority",
          "group": "4_filter@2"
        },
        {
          "command": "devsteps.filterByType",
          "group": "4_filter@3"
        },
        {
          "command": "devsteps.clearFilters",
          "group": "4_filter@4"
        }
      ],
      "view/item/context": [
        {
          "command": "devsteps.openItem",
          "when": "view == devsteps.itemsView && viewItem == workItem",
          "group": "1_navigation@1"
        },
        {
          "command": "devsteps.revealInExplorer",
          "when": "view == devsteps.itemsView && viewItem == workItem",
          "group": "1_navigation@2"
        },
        {
          "command": "devsteps.updateStatus",
          "when": "view == devsteps.itemsView && viewItem == workItem",
          "group": "2_modify@1"
        },
        {
          "command": "devsteps.editProperties",
          "when": "view == devsteps.itemsView && viewItem == workItem",
          "group": "2_modify@2"
        },
        {
          "command": "devsteps.copyId",
          "when": "view == devsteps.itemsView && viewItem == workItem",
          "group": "9_utilities@1"
        }
      ],
      "commandPalette": [
        {
          "command": "devsteps.openItem",
          "when": "false"
        },
        {
          "command": "devsteps.copyId",
          "when": "false"
        },
        {
          "command": "devsteps.revealInExplorer",
          "when": "false"
        },
        {
          "command": "devsteps.editProperties",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.mjs --production",
    "dev": "node esbuild.mjs --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "package": "vsce package",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@schnick371/devsteps-shared": "file:../shared",
    "chart.js": "^4.5.1",
    "d3": "^7.9.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.99.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Schnick371/devsteps"
  },
  "homepage": "https://github.com/Schnick371/devsteps#readme",
  "bugs": {
    "url": "https://github.com/Schnick371/devsteps/issues"
  }
}
